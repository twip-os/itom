    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Raspi Display",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/pi/itom/build/itom/qitom",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Remote Display",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/pi/itom/build/itom/qitom",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "DISPLAY", "value": "${env:DISPLAY}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
