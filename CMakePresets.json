{
    "version": 2,
    "configurePresets": [
        {
            "name": "twip_common",
            "hidden": true,
            "binaryDir": "${sourceDir}/../../build/itom",
            "cacheVariables": {
                "BUILD_TARGET64": true,
                "BUILD_WITH_ICON": true,
                "BUILD_WITH_SPECIFICSPLASHSCREEN": true,
                "BUILD_WITH_SPECIFICSPLASHSCREENTEXT": true,
                "BUILD_WITH_SPECIFICSPLASHSCREENTEXTPOSITION": true,
                "Boost_NO_WARN_NEW_VERSIONS": true,
                "ICON_FILE_PATH": "${sourceDir}/../../misc/styles_and_settings/twipHaken.png",
                "SPLASHSCREEN_FILE_PATH": "${sourceDir}/../../misc/styles_and_settings/SplashscreenDesktop.png",
                "SPLASHSCREEN_TEXT_COLOR": "0xFF000000",
                "SPLASHSCREEN_TEXT_POSITION_HORIZONTAL": "0.4",
                "SPLASHSCREEN_TEXT_POSITION_VERTICAL": "0.7"
            }
        },
        {
            "name": "develop_windows",
            "displayName": "Develop Windows",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator. With PCL.",
            "generator": "Visual Studio 16 2019",
            "cacheVariables": {
                "BUILD_WITH_PCL": true,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL",
                "BUILD_QTVERSION": "Qt5"
            }
        },
        {
            "name": "twip_api",
            "displayName": "twip API",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator. Without PCL.",
            "generator": "Visual Studio 16 2019",
            "cacheVariables": {
                "BUILD_WITH_PCL": false,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL"
            }
        },
        {
            "name": "transporto_release",
            "displayName": "Transporto Release",
            "inherits": "twip_common",
            "description": "Sets Ninja generator and disables debug postfix.",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_DEBUG_POSTFIX": {
                    "type": "STRING",
                    "value": ""
                },
                "BUILD_WITH_PCL": true,
                "BUILD_WITH_HELPVIEWER": false,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_FLAGS": "-Wno-psabi",
                "CMAKE_BUILD_TYPE": "Release",
                "BOOST_INCLUDEDIR": "/usr/include/boost"
            }
        },
        {
            "name": "transporto_debug",
            "displayName": "Transporto Debug",
            "inherits": "transporto_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}