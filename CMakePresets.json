{
    "version": 2,
    "configurePresets": [
        {
            "name": "twip_common",
            "hidden": true,
            "binaryDir": "${sourceDir}/../../build/itom",
            "cacheVariables": {
                "BUILD_TARGET64": true,
                "BUILD_QTVERSION": "Qt6",
                "Boost_NO_WARN_NEW_VERSIONS": true,
                "BUILD_WITH_GIMMICKS": false,
                "CUSTOM_APP_ICON": "${sourceDir}/../../misc/styles_and_settings/twipHaken.png",
                "SPLASH_SCREEN_CUSTOM_IMAGE": "${sourceDir}/../../misc/styles_and_settings/splashScreenDesktop.png",
                "SPLASH_SCREEN_TEXT_COLOR": "0xFF000000",
                "SPLASH_SCREEN_TEXT_POSITION_HORIZONTAL": "0.4",
                "SPLASH_SCREEN_TEXT_POSITION_VERTICAL": "0.7"
            }
        },
        {
            "name": "develop_windows",
            "displayName": "Develop Windows",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator. With PCL.",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "BUILD_WITH_PCL": true,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL"
            }
        },
        {
            "name": "twip_api",
            "displayName": "twip API",
            "inherits": "twip_common",
            "description": "Sets Visual Studio generator. Without PCL.",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "BUILD_WITH_PCL": false,
                "ITOM_3RDPARTYFOLDER": "${sourceDir}/../../3rdParty",
                "ITOM_3RDPARTYPCLFOLDER": "${sourceDir}/../../3rdPartyPCL"
            }
        },
        {
            "name": "transporto_release",
            "displayName": "Transporto Release",
            "inherits": "twip_common",
            "description": "Sets Ninja generator and disables debug postfix.",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/buildroot-build",
            "cacheVariables": {
                "CMAKE_DEBUG_POSTFIX": {
                    "type": "STRING",
                    "value": ""
                },
                "BUILD_WITH_PCL": false,
                "BUILD_WITH_HELPVIEWER": false,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_FLAGS": "-Wno-psabi",
                "CMAKE_BUILD_TYPE": "Release",
                "CONSIDER_GIT_SVN": false,
                "CUSTOM_APP_ICON": null,
                "SPLASH_SCREEN_CUSTOM_IMAGE": null,
                "SPLASH_SCREEN_TEXT_COLOR": null,
                "SPLASH_SCREEN_TEXT_POSITION_HORIZONTAL": null,
                "SPLASH_SCREEN_TEXT_POSITION_VERTICAL": null
            }
        },
        {
            "name": "transporto_debug",
            "displayName": "Transporto Debug",
            "inherits": "transporto_release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}